<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/singleDateContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        >
        <View
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="1px"
            android:background="#9e9e9e"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|center_horizontal"
            />
        <TextView
            android:id="@+id/title_date"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textSize="10dp"
            android:textAlignment="center"

            tools:text="title_date"
            />
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="1px"
            android:background="#9e9e9e"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|center_horizontal"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/singleMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/single_image"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_gravity="center_horizontal|top"
            />

        <LinearLayout
            android:id="@+id/read_con"
            android:layout_gravity="bottom|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/read"
                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|right"
                android:textSize="10dp"
                android:textColor="#ac8809"
                android:gravity="bottom|right"

                tools:text="read"
                />
            <TextView
                android:id="@+id/single_date"
                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|right"
                android:textSize="10dp"
                android:textColor="#949494"
                android:gravity="bottom|right"

                tools:text="singleDate"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >

            <TextView
                android:id="@+id/name"
                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:textSize="10dp"
                android:textColor="#4d4d4d"
                android:layout_marginBottom="4dp"

                tools:text="name"
                />

            <LinearLayout
                android:id="@+id/single_message_con"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:background="@drawable/chat_my_back"
                >

                <TextView
                    android:id="@+id/single_message"
                    android:includeFontPadding="false"
                    android:letterSpacing="-0.05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textAlignment="textStart"
                    android:textSize="13dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:maxEms="10"

                    tools:text="singleMessage"
                    />

                <ImageView
                    android:id="@+id/content_img"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:visibility="gone"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/single_date2"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:textSize="10dp"
            android:textColor="#949494"
            android:gravity="bottom|left"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            tools:text="singleDate2"
            />

    </LinearLayout>

</LinearLayout>