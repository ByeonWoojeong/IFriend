<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".MainFifthFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/img_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/my_img"
                android:layout_width="90dp"
                android:layout_height="90dp" />

            <ImageView
                android:id="@+id/edit_profile"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="end|bottom"
                android:src="@drawable/profile_revise" />
        </FrameLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="5dp"

            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:text=""
            android:textColor="@color/mainTextGray"
            android:textSize="18sp" />


        <LinearLayout
            android:id="@+id/my_child_profile_con"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_child_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="우리 아이 프로필"
                android:textColor="@color/mainTextGray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/like_sitter_con"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/like_sitter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="좋아하는 이웃 친구"
                android:textColor="@color/mainTextGray"
                android:textSize="15sp" />


            <LinearLayout
                android:id="@+id/new_con1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/new_badge_con1"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/new_badge"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notice_con"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="공지 사항"
                android:textColor="@color/mainTextGray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/helper_con"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/helper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="도움말"
                android:textColor="@color/mainTextGray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/one_to_one_con"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/one_to_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="1:1 문의"
                android:textColor="@color/mainTextGray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/preferences_con"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/preferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="환경 설정"
                android:textColor="@color/mainTextGray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/about_service_con"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/about_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="이용 약관"
                android:textColor="@color/mainTextGray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/refund_policy_con"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/refund_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="환불 정책"
                android:textColor="@color/mainTextGray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sitter_support_con"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sitter_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="이웃 친구 지원하기"
                android:textColor="@color/mainTextGray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mode_con"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mode_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="20dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="이웃 친구 모드 전환"
                android:textColor="@color/mainTextGray"
                android:textSize="15sp" />


            <LinearLayout
                android:id="@+id/new_con2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/new_badge_con2"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/new_badge"/>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/mode_switch_con"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/mode_switch_icon"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/mode_change" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>