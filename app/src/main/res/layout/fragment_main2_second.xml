<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Main2SecondFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:text="스케줄"
            android:textColor="@color/mainTextGray"
            android:textSize="18sp"
             />

        <FrameLayout
            android:id="@+id/edit_con"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="end">
            <TextView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="편집"
                android:textColor="@color/mainColor"
                android:textSize="15sp"
                 />
        </FrameLayout>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9"/>

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#fff"
        app:mcv_showOtherDates="all"
        app:mcv_selectionColor="@color/subTitleGray"
        app:mcv_allowClickDaysOutsideCurrentMonth="true"
        app:mcv_selectionMode="none"
        />

</LinearLayout>