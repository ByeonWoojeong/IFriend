<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".PaymentActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <FrameLayout
            android:id="@+id/back_con"
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="22dp"
                android:layout_height="17dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/btn_back" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"

            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:text="결제"
            android:textColor="#5a5a5a"
            android:textSize="18sp" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#fff"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.smarteist.autoimageslider.SliderLayout
                android:id="@+id/home_slider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true" />

            <LinearLayout
                android:id="@+id/sitter_info_con"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/sitter_photo"
                        android:layout_width="49dp"
                        android:layout_height="49dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:includeFontPadding="false"
                                android:letterSpacing="-0.05"
                                android:text="이웃친구"
                                android:textColor="@color/mainTextGray"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/sitter_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"

                                android:includeFontPadding="false"
                                android:letterSpacing="-0.05"
                                tools:text="변우정"
                                android:textColor="@color/mainTextGray"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/sitter_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"

                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        tools:text="서울시 구로구 구로동"
                        android:textColor="@color/infoTextGray"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/more_con"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical|end"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/more"
                        android:layout_width="13dp"
                        android:layout_height="17dp"
                        android:layout_marginRight="18dp"
                        android:src="@drawable/right_arrow" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d9d9d9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"

                    android:includeFontPadding="false"
                    android:letterSpacing="-0.05"
                    android:text="날짜"
                    android:textColor="@color/mainTextGray"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"

                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:textColor="@color/infoTextGray"
                        android:textSize="15sp"
                        tools:text="10월 29일" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:text=" ~ "
                        android:textColor="@color/infoTextGray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/finish_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:textColor="@color/infoTextGray"
                        android:textSize="15sp"
                        tools:text="10월 31일" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="20dp"

                    android:includeFontPadding="false"
                    android:letterSpacing="-0.05"
                    android:text="시간"
                    android:textColor="@color/mainTextGray"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"

                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:textColor="@color/infoTextGray"
                        android:textSize="15sp"
                        tools:text="1:00 PM" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:text=" ~ "
                        android:textColor="@color/infoTextGray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/finish_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:textColor="@color/infoTextGray"
                        android:textSize="15sp"
                        tools:text="4:00 PM" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"

                    android:includeFontPadding="false"
                    android:letterSpacing="-0.05"
                    android:text="예약된 우리아이"
                    android:textColor="@color/mainTextGray"
                    android:textSize="15sp" />

                <ListView
                    android:id="@+id/child_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:groupIndicator="@null"
                    android:overScrollMode="never" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/calculation_con"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="30dp"
                android:background="@color/thickLineGray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_weight="1"

                        android:text="총 시간"
                        android:textColor="@color/infoTextGray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/total_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="18dp"
                        android:layout_weight="1"

                        android:gravity="end"
                        android:text="시간"
                        android:textColor="@color/mainTextGray"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_weight="1"

                        android:text="우리 아이"
                        android:textColor="@color/infoTextGray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/total_children"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="18dp"
                        android:layout_weight="1"

                        android:gravity="end"
                        android:text="명"
                        android:textColor="@color/mainTextGray"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#d9d9d9" />

                <LinearLayout
                    android:id="@+id/expected_price_con"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_weight="1"

                        android:text="결제 예정 금액"
                        android:textColor="@color/infoTextGray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/expected_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="18dp"
                        android:layout_weight="1"

                        android:gravity="end"
                        android:text="원"
                        android:textColor="@color/starOnRed"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sale_con"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="40dp"
                android:background="@color/thickLineGray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_weight="1"

                        android:text="할인 적용"
                        android:textColor="@color/infoTextGray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/sale_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="18dp"
                        android:layout_weight="1"

                        android:gravity="end"
                        android:text="원"
                        android:textColor="@color/mainTextGray"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_weight="1"

                        android:text="부가세 (10%)"
                        android:textColor="@color/infoTextGray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/vat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="18dp"
                        android:layout_weight="1"

                        android:gravity="end"
                        android:text="원"
                        android:textColor="@color/mainTextGray"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#d9d9d9" />

                <LinearLayout
                    android:id="@+id/total_amount_con"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_weight="1"

                        android:text="총금액"
                        android:textColor="@color/infoTextGray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/total_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="18dp"
                        android:layout_weight="1"

                        android:gravity="end"
                        android:text="원"
                        android:textColor="@color/starOnRed"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9" />

                <LinearLayout
                    android:id="@+id/service_con"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/service_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp"

                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:text="서비스 이용 약관"
                        android:textColor="@color/mainTextGray"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/service_more_con"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end|center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/service_more_icon"
                            android:layout_width="13dp"
                            android:layout_height="17dp"
                            android:layout_marginRight="18dp"
                            android:src="@drawable/right_arrow" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9" />

                <LinearLayout
                    android:id="@+id/refund_con"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/refund_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp"

                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:text="환불 정책"
                        android:textColor="@color/mainTextGray"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/refund_more_con"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end|center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/refund_more_icon"
                            android:layout_width="13dp"
                            android:layout_height="17dp"
                            android:layout_marginRight="18dp"
                            android:src="@drawable/right_arrow" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="35dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/check"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:button="@drawable/agree_checkbox"
                    android:focusable="false"
                    android:checked="false"
                    />

                <TextView
                    android:id="@+id/agree"
                    android:includeFontPadding="false"
                    android:letterSpacing="-0.05"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/subTitleGray"
                    android:text="위 결제 내역에 동의합니다."
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:ellipsize="end"

                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/pay_con"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/mainColor"
        >

        <TextView
            android:id="@+id/pay"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteColor"
            android:text="결제하기"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal|center_vertical"

            />

    </FrameLayout>

</LinearLayout>