<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".WriteResume4Activity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <FrameLayout
            android:id="@+id/back_con"
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="22dp"
                android:layout_height="17dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/btn_back" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"

            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:text="지원서 작성"
            android:textColor="@color/titleBarTextGray"
            android:textSize="18sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="4"
                android:textColor="@color/mainColor"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="/5"
                android:textColor="@color/infoTextGray"
                android:textSize="15sp" />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5">
        <View
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="3dp"
            android:background="@color/mainColor" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="3dp"
            android:background="@color/thickLineGray" />

    </LinearLayout>



    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:background="#fff"
        android:layout_weight="1"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="활동 유형"
                android:textColor="@color/mainTextGray"
                android:textSize="20sp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"

                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:text="이웃 친구 활동 가능 일 수"
                        android:textColor="@color/mainTextGray"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="5dp"

                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:text="(한달 기준)"
                        android:textColor="@color/subTitleGray"
                        android:textSize="13sp" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp">
                    <RadioButton
                        android:id="@+id/radio1"
                        android:textColor="@color/infoTextGray"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_button"
                        android:text="  주말에만 가능"
                        />
                    <RadioButton
                        android:id="@+id/radio2"
                        android:textColor="@color/infoTextGray"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:button="@drawable/radio_button"
                        android:text="  10일 미만"
                        />
                    <RadioButton
                        android:id="@+id/radio3"
                        android:textColor="@color/infoTextGray"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:button="@drawable/radio_button"
                        android:text="  10일 이상 ~ 20일 미만"
                        />
                    <RadioButton
                        android:id="@+id/radio4"
                        android:textColor="@color/infoTextGray"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:button="@drawable/radio_button"
                        android:text="  20일 이상"
                        />
                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/family_character_con"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"

                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:text="제공 가능 서비스"
                        android:textColor="@color/mainTextGray"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"

                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:text="중복 선택 가능"
                        android:textColor="@color/subTitleGray"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@+id/pick_up_check_con"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">
                                <CheckBox
                                    android:id="@+id/pick_up_check"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:button="@drawable/just_checkbox"
                                    android:focusable="false"
                                    android:checked="false"
                                    />
                                <TextView
                                    android:id="@+id/pick_up_check_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"

                                    android:includeFontPadding="false"
                                    android:letterSpacing="-0.05"
                                    android:text="픽업"
                                    android:textColor="@color/infoTextGray"
                                    android:textSize="15sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/medicate_check_con"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">
                                <CheckBox
                                    android:id="@+id/medicate_check"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:button="@drawable/just_checkbox"
                                    android:focusable="false"
                                    android:checked="false"
                                    />

                                <TextView
                                    android:id="@+id/medicate_check_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"

                                    android:includeFontPadding="false"
                                    android:letterSpacing="-0.05"
                                    android:text="투약"
                                    android:textColor="@color/infoTextGray"
                                    android:textSize="15sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/toddlers_check_con"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">
                                <CheckBox
                                    android:id="@+id/toddlers_check"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:button="@drawable/just_checkbox"
                                    android:focusable="false"
                                    android:checked="false"
                                    />
                                <TextView
                                    android:id="@+id/toddlers_check_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"

                                    android:includeFontPadding="false"
                                    android:letterSpacing="-0.05"
                                    android:text="영유아 돌봄"
                                    android:textColor="@color/infoTextGray"
                                    android:textSize="15sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/long_care_check_con"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">
                                <CheckBox
                                    android:id="@+id/long_care_check"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:button="@drawable/just_checkbox"
                                    android:focusable="false"
                                    android:checked="false"
                                    />
                                <TextView
                                    android:id="@+id/long_care_check_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"

                                    android:includeFontPadding="false"
                                    android:letterSpacing="-0.05"
                                    android:text="장기 돌봄"
                                    android:textColor="@color/infoTextGray"
                                    android:textSize="15sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/shower_check_con"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">
                                <CheckBox
                                    android:id="@+id/shower_check"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:button="@drawable/just_checkbox"
                                    android:focusable="false"
                                    android:checked="false"
                                    />
                                <TextView
                                    android:id="@+id/shower_check_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"

                                    android:includeFontPadding="false"
                                    android:letterSpacing="-0.05"
                                    android:text="목욕"
                                    android:textColor="@color/infoTextGray"
                                    android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@+id/homework_check_con"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">
                                <CheckBox
                                    android:id="@+id/homework_check"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:button="@drawable/just_checkbox"
                                    android:focusable="false"
                                    android:checked="false"
                                    />
                                <TextView
                                    android:id="@+id/homework_check_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"

                                    android:includeFontPadding="false"
                                    android:letterSpacing="-0.05"
                                    android:text="숙제 지도"
                                    android:textColor="@color/infoTextGray"
                                    android:textSize="15sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/solving_check_con"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">
                                <CheckBox
                                    android:id="@+id/solving_check"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:button="@drawable/just_checkbox"
                                    android:focusable="false"
                                    android:checked="false"
                                    />
                                <TextView
                                    android:id="@+id/solving_check_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"

                                    android:includeFontPadding="false"
                                    android:letterSpacing="-0.05"
                                    android:text="학습지 지도"
                                    android:textColor="@color/infoTextGray"
                                    android:textSize="15sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/outdoor_check_con"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">
                                <CheckBox
                                    android:id="@+id/outdoor_check"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:button="@drawable/just_checkbox"
                                    android:focusable="false"
                                    android:checked="false"
                                    />
                                <TextView
                                    android:id="@+id/outdoor_check_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"

                                    android:includeFontPadding="false"
                                    android:letterSpacing="-0.05"
                                    android:text="야외 활동"
                                    android:textColor="@color/infoTextGray"
                                    android:textSize="15sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/snack_check_con"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">
                                <CheckBox
                                    android:id="@+id/snack_check"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:button="@drawable/just_checkbox"
                                    android:focusable="false"
                                    android:checked="false"
                                    />
                                <TextView
                                    android:id="@+id/snack_check_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"

                                    android:includeFontPadding="false"
                                    android:letterSpacing="-0.05"
                                    android:text="간식 제공"
                                    android:textColor="@color/infoTextGray"
                                    android:textSize="15sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/meal_check_con"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">
                                <CheckBox
                                    android:id="@+id/meal_check"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:button="@drawable/just_checkbox"
                                    android:focusable="false"
                                    android:checked="false"
                                    />
                                <TextView
                                    android:id="@+id/meal_check_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"

                                    android:includeFontPadding="false"
                                    android:letterSpacing="-0.05"
                                    android:text="식사 제공"
                                    android:textColor="@color/infoTextGray"
                                    android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/etc_check_con"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:id="@+id/etc_check"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="30dp"
                            android:layout_gravity="center_vertical"
                            android:button="@drawable/just_checkbox"
                            android:focusable="false"
                            android:checked="false"
                            />
                        <TextView
                            android:id="@+id/etc_check_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"

                            android:includeFontPadding="false"
                            android:letterSpacing="-0.05"
                            android:text="기타"
                            android:textColor="@color/infoTextGray"
                            android:textSize="15sp" />
                        <EditText
                            android:id="@+id/etc_check_edit"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/border_radius1"

                            android:hint=""
                            android:enabled="false"
                            android:includeFontPadding="false"
                            android:inputType="none"
                            android:letterSpacing="-0.05"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:textColor="@color/mainTextGray"
                            android:textColorHint="@color/editHintGray"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/available_con"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:text="가능한 교육 서비스"
                        android:textColor="@color/infoTextGray"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/available_edit"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/border_radius1"

                        android:hint="예) 영어 교육, 음악, 미술 활동"
                        android:includeFontPadding="false"
                        android:inputType="none"
                        android:letterSpacing="-0.05"
                        android:paddingLeft="10dp"
                        android:textColor="@color/mainTextGray"
                        android:textColorHint="@color/editHintGray"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/next_con"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="50dp"
                android:background="@color/mainColor"
                android:layout_gravity="bottom"
                >

                <TextView
                    android:id="@+id/next"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:includeFontPadding="false"
                    android:letterSpacing="-0.05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whiteColor"
                    android:text="다음"
                    android:textSize="15sp"
                    android:layout_gravity="center"

                    />

            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>