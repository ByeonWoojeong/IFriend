<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".Main2FifthFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/my_img"
                android:layout_width="90dp"
                android:layout_height="90dp" />

            <ImageView
                android:id="@+id/edit_profile"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="end|bottom"
                android:src="@drawable/profile_revise" />
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="5dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="이웃 친구 "
                android:textColor="@color/mainColor"
                android:textSize="18sp" />
            <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="5dp"

            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            tools:text=" 성이름"
            android:textColor="@color/mainTextGray"
            android:textSize="18sp" />
        </LinearLayout>




        <LinearLayout
            android:id="@+id/page_manager_con"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/page_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="페이지 관리"
                android:textColor="@color/mainTextGray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profit_con"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="수입 통계"
                android:textColor="@color/mainTextGray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/badge_status_con"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/badge_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="뱃지 현황"
                android:textColor="@color/mainTextGray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notification_con"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="공지 사항"
                android:textColor="@color/mainTextGray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/helper_con"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/helper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="도움말"
                android:textColor="@color/mainTextGray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/one_to_one_con"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/one_to_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="1:1 문의"
                android:textColor="@color/mainTextGray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/preferences_con"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/preferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="환경 설정"
                android:textColor="@color/mainTextGray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/about_service_con"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/about_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="이용 약관"
                android:textColor="@color/mainTextGray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/refund_policy_con"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/refund_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="환불 정책"
                android:textColor="@color/mainTextGray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mode_con"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mode_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="20dp"

                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="아이 친구 모드 전환"
                android:textColor="@color/mainTextGray"
                android:textSize="15sp" />


            <LinearLayout
                android:id="@+id/new_con"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">

                <View
                    android:id="@+id/new_badge_con"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/mode_switch_con"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/mode_switch_icon"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/mode_change" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>